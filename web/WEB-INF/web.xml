<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <filter>
        <filter-name>RemoteUser</filter-name>
        <filter-class>com.stackframe.sarariman.RemoteUser</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RemoteUser</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <listener>
        <listener-class>com.stackframe.sarariman.DirectoryBinder</listener-class>
    </listener>
    <listener><listener-class>com.stackframe.sarariman.SararimanContextListener</listener-class></listener>
    <servlet>
        <servlet-name>timesheets</servlet-name>
        <jsp-file>/timesheets.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>timesheet</servlet-name>
        <jsp-file>/timesheet.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>changelog</servlet-name>
        <jsp-file>/changelog.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>timesheets</servlet-name>
        <url-pattern>/timesheets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>timesheet</servlet-name>
        <url-pattern>/timesheet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changelog</servlet-name>
        <url-pattern>/changelog</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>editentry</servlet-name>
        <jsp-file>/editentry.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>editentry</servlet-name>
        <url-pattern>/editentry</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <env-entry>
        <env-entry-name>java.naming.factory.initial</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>com.sun.jndi.ldap.LdapCtxFactory</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>java.naming.provider.url</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>ldap://ldap.stackframe.com:389/dc=stackframe,dc=com</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>java.naming.security.authentication</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>simple</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>java.naming.security.principal</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>uid=mycroft,ou=People,dc=stackframe,dc=com</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>java.naming.security.credentials</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>67qwnm</env-entry-value>
    </env-entry>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/sarariman</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/sarariman</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
